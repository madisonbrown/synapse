{
  "compilerOptions": {
    "target": "ES6",
    "module": "commonjs",
    "declaration": true,
    "outDir": "./build",
    "rootDir": "./",
    "experimentalDecorators": true
  },
  "typedocOptions": {
    "name": "synapse",
    "inputFiles": "lib",
    "out": "docs",
    "mode": "modules",
    "hideGenerator": true,
    "hideBreadcrumbs": true,
    "exclude": [
      //"index.ts",
      //"**/index.ts"
    ],
    "excludeNotExported": true,
  }
}